   <equals>
    <property>A-10-nav/A-10-nav-selector-nav_crs</property>
    <value>1</value>
   </equals>
  </condition>
 </animation>

 <animation>
  <type>select</type>
  <object-name>index-man</object-name>
  <condition>
   <equals>
    <property>A-10-nav/A-10-nav-selector-man</property>
    <value>1</value>
   </equals>
  </condition>
 </animation>

 <animation>
  <type>select</type>
  <object-name>index-ils</object-name>
  <condition>
   <equals>
    <property>controls/switches/ils</property>
    <value>1</value>
   </equals>
  </condition>
 </animation>

 <animation>
  <type>select</type>
  <object-name>index-tcn</object-name>
  <condition>
   <equals>
    <property>instrumentation/tacan/switch-position</property>
    <value>1</value>
   </equals>
  </condition>
 </animation>

 <animation>
  <type>select</type>
  <object-name>homing-light-fm-on</object-name>
  <condition>
    <greater-than>
      <property>systems/electrical/outputs/nav-mode</property>
      <value>24</value>
    </greater-than>
   <equals>
    <property>controls/switches/homing-FM</property>
    <value>1</value>
   </equals>
  </condition>
 </animation>
 <animation>
  <type>select</type>
  <object-name>homing-light-fm-off</object-name>
  <condition>
   <equals>
    <property>controls/switches/homing-FM</property>
    <value>0</value>
   </equals>
  </condition>
 </animation>

 <animation>
  <type>select</type>
  <object-name>homing-light-uhf-on</object-name>
  <condition>
    <greater-than>
      <property>systems/electrical/outputs/nav-mode</property>
      <value>24</value>
    </greater-than>
   <equals>
    <property>controls/switches/homing-UHF</property>
    <value>1</value>
   </equals>
  </condition>
 </animation>
 <animation>
  <type>select</type>
  <object-name>homing-light-uhf-off</object-name>
  <condition>
   <equals>
    <property>controls/switches/homing-UHF</property>
    <value>0</value>
   </equals>
  </condition>
 </animation>



  <animation>
   <object-name>homing-light-fm-on</object-name> 
   <type>material</type>
    <condition>
      <less-than>
        <property>systems/electrical/outputs/nav-mode</property>
        <value>24</value>
      </less-than>
    </condition>
    <emission> 
      <red>0.65</red>
      <green>0.65</green>
      <blue>0.65</blue>
    </emission>
  </animation>

  <animation>
   <object-name>homing-light-uhf-on</object-name> 
   <type>material</type>
    <condition>
      <less-than>
        <property>systems/electrical/outputs/nav-mode</property>
        <value>24</value>
      </less-than>
    </condition>
    <emission> 
      <red>0.65</red>
      <green>0.65</green>
      <blue>0.65</blue>
    </emission>
  </animation>


<!-- get values for PTR switch so we can move it on the left (able) or the right (stow). will stay in the middle if /nav/nav-selector-ptr isn't defined. -->

<!-- should stay on "stow" until further NAV system implementation -->

  <animation>
    <object-name>ptr-switch</object-name>
    <type>rotate</type>
    <property>A-10-nav/A-10-nav-selector-ptr</property>
    <interpolation>
      <entry><ind>0</ind><dep>-30</dep></entry>
      <entry><ind>1</ind><dep>30</dep></entry>
    </interpolation>
    <center>
      <x-m>0.0</x-m>
      <y-m>-0.0110</y-m>
      <z-m>0.0078</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>1</z>
    </axis>
  </animation>






