<?xml version="1.0"?>



<PropertyList>
  <path>A-10-nav-mode-selector.ac</path>

<!-- get values for HARS, VLOCS, TILS, NAV CRS, MAN, ILS, TCN switches/indicators state so we can show/hide the triangular indexes-->

  <animation>
    <type>select</type>
    <object-name>index-hars</object-name>
    <condition>
      <equals>
        <property>A-10-nav/A-10-nav-selector-hars</property>
        <value>1</value>
      </equals>
    </condition>
  </animation>

 <animation>
  <type>select</type>
  <object-name>index-vlocs</object-name>
  <condition>
   <equals>
    <property>A-10-nav/A-10-nav-selector-vlocs</property>
    <value>1</value>
   </equals>
  </condition>
 </animation>

 <animation>
  <type>select</type>
  <object-name>index-tils</object-name>
  <condition>
   <equals>
    <property>A-10-nav/A-10-nav-selector-tils</property>
    <value>1</value>
   </equals>
