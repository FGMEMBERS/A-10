<?xml version="1.0"?>
<!DOCTYPE PropertyList SYSTEM "panel.dtd">


<PropertyList> 
 <name>A-10 R Panel Hotspots</name>
 <background>Aircraft/A-10/Models/transparent-bg.rgb</background>
 <w>1024</w>
 <h>768</h>
 <y-offset>0</y-offset>

 <instruments> 
  <instrument> 
   <name>R panel</name>
         <y>384</y>
          <w>1024</w>
          <h>768</h>
          <w-base>1024</w-base>
          <h-base>1024</h-base>
          <x>512</x>
   

   <layers> 

    <layer> 
     <name>background</name>
     <texture> 
      <path>Aircraft/A-10/Models/transparent-bg.rgb</path>
      <x1>0.0</x1>
      <y1>0.0</y1>
      <x2>1.0</x2>
      <y2>1.0</y2>
     </texture>
    </layer>

   <!--<layer>
    <name>grid</name>
    <texture>
     <path>Aircraft/A-10/Models/hotspotgrid.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
    </texture>
   </layer>-->

  </layers>

<!-- define hotspot actions below -->
<actions> 



<!-- altimeter -->
           <action> 
              <name>calibrate fine</name>
              <button>0</button>
              <x>-500</x>
              <y>25</y>
              <w>26</w>
              <h>40</h>
              <binding> 
                <command>property-adjust</command>
                <property>instrumentation/altimeter/setting-inhg</property>
                <step>-0.005</step>
                <min>26.0</min>
                <max>33.0</max>
                <wrap>false</wrap>
              </binding>
            </action>
            <action> 
              <name>calibrate coarse</name>
              <button>1</button>
              <x>-500</x>
              <y>25</y>
              <w>26</w>
              <h>40</h>
              <binding> 
                <command>property-adjust</command>
                <property>instrumentation/altimeter/setting-inhg</property>
                <step>-0.05</step>
                <min>26.0</min>
                <max>33.0</max>
                <wrap>false</wrap>
              </binding>
            </action>
            <action> 
              <name>calibrate fine</name>
              <button>0</button>
              <x>-468</x>
              <y>25</y>
              <w>26</w>
              <h>40</h>
              <binding> 
                <command>property-adjust</command>
                <property>instrumentation/altimeter/setting-inhg</property>
                <step>0.005</step>
                <min>26.0</min>
                <max>33.0</max>
                <wrap>false</wrap>
              </binding>
            </action>
            <action> 
              <name>calibrate coarse</name>
              <button>1</button>
              <x>-468</x>
              <y>25</y>
              <w>26</w>
              <h>40</h>
              <binding> 
                <command>property-adjust</command>
                <property>instrumentation/altimeter/setting-inhg</property>
                <step>0.05</step>
                <min>26.0</min>
                <max>33.0</max>
                <wrap>false</wrap>
              </binding>
            </action>


          </actions> 

   </instrument>
  </instruments>


</PropertyList>
