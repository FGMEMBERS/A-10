			<file>Aircraft/A-10/Nasal/landing_gear_handle.nas</file>
		</landing_gear_handle>
		<canopy>
			<file>Aircraft/A-10/Nasal/canopy.nas</file>
		</canopy>
		<electrical>
			<file>Aircraft/A-10/Nasal/electrical.nas</file>
		</electrical>
		<apu>
			<file>Aircraft/A-10/Nasal/apu.nas</file>
		</apu>
		<engines>
			<file>Aircraft/A-10/Nasal/engines.nas</file>
		</engines>
