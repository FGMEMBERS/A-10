<?xml version="1.0"?>
<!DOCTYPE PropertyList SYSTEM "panel.dtd">


<PropertyList>

 <name>A-10 r4 Panel Hotspots</name>
 <background>Aircraft/A-10/Models/transparent-bg.rgb</background>
 <w>1024</w>
 <h>768</h>
 <y-offset>0</y-offset>

 <instruments> 
  <instrument> 
   <name>r4 panel</name>
   <y>384</y>
   <w>1024</w>
   <h>768</h>
   <w-base>1024</w-base>
   <h-base>1024</h-base>
   <x>512</x>

   <layers> 

    <layer> 
     <name>background</name>
     <texture> 
      <path>Aircraft/A-10/Models/transparent-bg.rgb</path>
      <!-- <path>Aircraft/A-10/Models/hotspotgrid.rgb</path> -->
      <x1>0.0</x1>
      <y1>0.0</y1>
      <x2>1.0</x2>
      <y2>1.0</y2>
     </texture>
    </layer>

   </layers>

<!-- define hotspot actions below -->


   <actions> 
     
<!-- apu-gen-power -->
    <action>
     <name>apu-gen-powered</name>
      <button>0</button>
      <x>-383</x>
      <y>-100</y>
      <w>178</w>
      <h>188</h>
      <binding>
       <command>property-toggle</command>
       <property>controls/electric/APU-generator</property>
      </binding>
     </action>


<!-- inverter-stby -->
    <action>
     <name>inverter-stby-down</name>
      <button>0</button>
      <x>-160</x>
      <y>-100</y>
      <w>178</w>
      <h>80</h>
      <binding>
        <command>nasal</command>
        <script>electrical.inverter_switch(-1)</script>
      </binding>
    </action>

    <action>
     <name>inverter-stby-up</name>
      <button>0</button>
      <x>-160</x>
      <y>-15</y>
      <w>178</w>
      <h>80</h>
      <binding>
        <command>nasal</command>
        <script>electrical.inverter_switch(1)</script>
      </binding>
    </action>


<!-- l-ac-gen-power -->
    <action>
     <name>apu-gen-powered</name>
      <button>0</button>
      <x>-383</x>
      <y>-335</y>
      <w>178</w>
      <h>188</h>
      <binding>
       <command>property-toggle</command>
       <property>controls/electric/engine/generator</property>
      </binding>
     </action>

<!-- r-ac-gen-pwr -->
    <action>
     <name>apu-gen-powered</name>
      <button>0</button>
      <x>-160</x>
      <y>-345</y>
      <w>178</w>
      <h>188</h>
      <binding>
       <command>property-toggle</command>
       <property>controls/electric/engine[1]/generator</property>
      </binding>
     </action>


<!-- battery-pwr -->
    <action>
     <name>battery-cockpit-switch</name>
      <button>0</button>
      <x>125</x>
      <y>-360</y>
      <w>178</w>
      <h>188</h>
      <binding>
       <command>property-toggle</command>
       <property>controls/electric/battery-switch</property>
      </binding>
     </action>





   </actions> 

  </instrument>
 </instruments>

</PropertyList>
