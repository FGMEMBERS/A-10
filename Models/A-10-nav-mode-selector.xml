<!-- homing FM light stay enlightened until further NAV system implementation -->
  <animation>
   <object-name>homing-light-fm</object-name> 
   <type>material</type>
    <emission> 
        <red>0.65</red>
        <green>0.65</green>
        <blue>0.65</blue>
      </emission>
  </animation>


<!-- get values for PTR switch so we can move it on the left (able) or the right (stow). will stay in the middle if /nav/nav-selector-ptr isn't defined. -->

<!-- should stay on "stow" until further NAV system implementation -->

  <animation>
	<object-name>ptr-switch</object-name>
     <type>rotate</type>
 	 <property>/A-10-nav/A-10-nav-selector-ptr</property>
     <interpolation>
	  <entry><ind>0</ind><dep>-30</dep></entry>
	  <entry><ind>1</ind><dep>30</dep></entry>
     </interpolation>
	 <center>
      <x-m>0.0</x-m>
      <y-m>-0.0110</y-m>
      <z-m>0.0078</z-m>
	 </center>
	 <axis>
	  <x>0</x>
	  <y>0</y>
	  <z>1</z>
	 </axis>
  </animation>






