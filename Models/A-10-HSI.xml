<?xml version="1.0"?>

<PropertyList>
 <!-- horizontal situation indicator -->
 <name>HSI</name>
 <path>A-10-HSI.ac</path>

 <animation>
  <type>rotate</type>
  <object-name>HSI-compass-card</object-name>
  <property>orientation/heading-magnetic-deg</property>
  <center>
   <x-m>0.0</x-m>
   <y-m>0.0</y-m>
   <z-m>0.0</z-m>
  </center>
  <axis>
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

