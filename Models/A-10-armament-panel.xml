	<!--stations-->
	<animation>
		<type>select</type>
		<object-name>s-11-0</object-name>
		<condition>
			<property>sim/model/A-10/weapons/stations/station[10]/selected</property>
			<not>
				<property>sim/model/A-10/weapons/aim9s/aim9[1]/trigger</property>
			</not>
			<property>sim/model/A-10/weapons/aim9s/aim9-available</property>
			<greater-than>
				<property>systems/electrical/R-AC-volts</property>
				<value>24</value>
			</greater-than>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>s-11-1</object-name>
		<condition>
			<property>sim/model/A-10/weapons/stations/station[10]/selected</property>
			<not>
				<property>sim/model/A-10/weapons/aim9s/aim9[0]/trigger</property>
			</not>
			<property>sim/model/A-10/weapons/aim9s/aim9-available</property>
