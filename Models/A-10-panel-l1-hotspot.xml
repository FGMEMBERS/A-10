<?xml version="1.0"?>
<!DOCTYPE PropertyList SYSTEM "panel.dtd">

<PropertyList>
  <name>A-10 l1 Panel Hotspots</name>
  <background>Aircraft/A-10/Models/transparent-bg.rgb</background>
  <w>1024</w>
  <h>768</h>
  <y-offset>0</y-offset>
  <instruments> 
    <instrument> 
      <name>l2 panel</name>
      <y>384</y>
      <w>1024</w>
      <h>768</h>
      <w-base>1024</w-base>
      <h-base>1024</h-base>
      <x>512</x>
      <layers> 
        <layer> 
          <name>background</name>
          <texture> 
            <path>Aircraft/A-10/Models/transparent-bg.rgb</path>
            <!--<path>Aircraft/A-10/Models/hotspotgrid.rgb</path>-->
            <x1>0.0</x1>
            <y1>0.0</y1>
            <x2>1.0</x2>
            <y2>1.0</y2>
          </texture>
        </layer>
      </layers>
<!-- define hotspot actions below -->
      <actions> 
        <action> 
          <name>APU-switch-start</name>
          <button>0</button>
          <x>178</x>
          <y>-335</y>
          <w>140</w>
          <h>43</h>
          <binding> 
            <command>nasal</command>
            <script>apu.off_start_switch(1)</script>
          </binding>
        </action>
        <action> 
          <name>APU-switch-off</name>
          <button>0</button>
          <x>178</x>
          <y>-389</y>
          <w>140</w>
          <h>43</h>
          <binding> 
            <command>nasal</command>
            <script>apu.off_start_switch(-1)</script>
           </binding>
        </action>
      </actions> 
    </instrument>
  </instruments>
</PropertyList>
