<PropertyList>
<path>A-10-nav-mode-selector.ac</path>

<!-- get values for HARS, VLOCS, TILS, NAV CRS, MAN, ILS, TCN switches/indicators state so we can show/hide the triangular indexes-->

 <animation>
  <type>select</type>
  <object-name>index-hars</object-name>
  <condition>
   <equals>
    <property>/A-10-nav/A-10-nav-selector-hars</property>
