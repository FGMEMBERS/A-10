              <y>-468</y>
              <w>98</w>
              <h>46</h>
              <binding> 
                <command>property-toggle</command>
                <property>instrumentation/tacan/switch-position</property>
              </binding>
            </action>

  <!-- homing FM button -->
           <action> 
              <name>homing-FM-toggle</name>
              <button>0</button>
              <x>343</x>
              <y>-468</y>
              <w>82</w>
              <h>40</h>
              <binding> 
                <command>property-toggle</command>
                <property>controls/switches/homing-FM</property>
              </binding>
            </action>

  <!-- homing UHF button -->
           <action> 
              <name>homing-UHF-toggle</name>
              <button>0</button>
              <x>343</x>
              <y>-418</y>
              <w>82</w>
              <h>40</h>
              <binding> 
                <command>property-toggle</command>
                <property>controls/switches/homing-UHF</property>
              </binding>
            </action>

          </actions> 

   </instrument>
  </instruments>


</PropertyList>
